{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "xv6-start",
            "dependsOrder": "sequence",
            "dependsOn": [
                "xv6-stop",
                "xv6-make"
            ]
        },
        {
            "label": "xv6-make",
            "type": "shell",
            "isBackground": true,
            "command": "make qemu-gdb",
            "problemMatcher": [
                {
                    "pattern": [
                        {
                            "regexp": ".",
                            "file": 1,
                            "location": 2,
                            "message": 3
                        }
                    ],
                    "background": {
                        "beginsPattern": ".*Now run 'gdb' in another window.",
                        // 要对应编译成功后,一句echo的内容. 此处对应 Makefile Line:170
                        "endsPattern": "."
                    }
                }
            ]
        },
        {
            "label": "xv6-stop",
            "type": "shell",
            "command": "kill -TERM $(pgrep -f qemu-system-riscv64)",
        }
    ]
}